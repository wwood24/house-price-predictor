FROM python:3.9-slim

# Install OS dependencies for compiled Python packages
RUN apt-get update && apt-get install -y \
    build-essential \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY etl_model_api .

COPY src/ ./src

COPY pyproject.toml .


RUN pip install --no-cache-dir -r requirements.txt

RUN pip install .

CMD ["python3", "main.py"]